<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    tools:context=".views.fragments.SignUpFragment">

    <LinearLayout
        android:id="@+id/bg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sign_up_border"
        android:alpha=".9"
        android:layout_marginTop="@dimen/login_sign_up_top_bottom_margin"
        android:layout_marginBottom="@dimen/login_sign_up_top_bottom_margin"
        android:layout_marginStart="@dimen/search_bar_spacing"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/search_bar_spacing"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/login_sign_up_top_bottom_margin"
        android:layout_marginBottom="@dimen/login_sign_up_top_bottom_margin"
        android:layout_marginStart="@dimen/search_bar_spacing"
        android:orientation="vertical"
        android:alpha="1"
        android:layout_marginEnd="@dimen/search_bar_spacing">

        <TextView
            android:id="@+id/sign_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:layout_margin="@dimen/search_bar_spacing"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/product_detail_price_size"/>

        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_bar_spacing"
            android:layout_marginLeft="@dimen/search_bar_spacing"
            android:layout_marginRight="@dimen/search_bar_spacing"
            android:layout_marginEnd="@dimen/search_bar_spacing"
            android:textColorHint="@color/dark_blue"
            android:textColor="@color/dark_blue"
            app:drawableLeftCompat="@drawable/ic_baseline_emoji_emotions_24"
            android:drawablePadding="14dp"
            android:background="@drawable/bottom_view_border"
            android:inputType="textCapWords"
            android:hint="@string/first_name"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_bar_spacing"
            android:layout_marginLeft="@dimen/search_bar_spacing"
            android:layout_marginRight="@dimen/search_bar_spacing"
            android:layout_marginEnd="@dimen/search_bar_spacing"
            android:textColorHint="@color/dark_blue"
            android:textColor="@color/dark_blue"
            app:drawableLeftCompat="@drawable/ic_baseline_emoji_emotions_24"
            android:drawablePadding="14dp"
            android:background="@drawable/bottom_view_border"
            android:inputType="textCapWords"
            android:hint="@string/last_name"
            android:textStyle="bold"
            android:importantForAutofill="no"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_bar_spacing"
            android:layout_marginLeft="@dimen/search_bar_spacing"
            android:layout_marginRight="@dimen/search_bar_spacing"
            android:layout_marginEnd="@dimen/search_bar_spacing"
            android:textColorHint="@color/dark_blue"
            android:textColor="@color/dark_blue"
            app:drawableLeftCompat="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="14dp"
            android:background="@drawable/bottom_view_border"
            android:inputType="textCapWords"
            android:hint="@string/address"
            android:textStyle="bold"
            android:importantForAutofill="no"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_bar_spacing"
            android:layout_marginLeft="@dimen/search_bar_spacing"
            android:layout_marginRight="@dimen/search_bar_spacing"
            android:layout_marginEnd="@dimen/search_bar_spacing"
            android:textColorHint="@color/dark_blue"
            android:textColor="@color/dark_blue"
            app:drawableLeftCompat="@drawable/ic_baseline_alternate_email_24"
            android:drawablePadding="14dp"
            android:background="@drawable/bottom_view_border"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:textStyle="bold"
            android:importantForAutofill="no"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_bar_spacing"
            android:layout_marginLeft="@dimen/search_bar_spacing"
            android:layout_marginRight="@dimen/search_bar_spacing"
            android:layout_marginEnd="@dimen/search_bar_spacing"
            android:textColorHint="@color/dark_blue"
            android:textColor="@color/dark_blue"
            app:drawableLeftCompat="@drawable/ic_baseline_lock_24"
            android:drawablePadding="14dp"
            android:background="@drawable/bottom_view_border"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:textStyle="bold"
            android:importantForAutofill="no"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_bar_spacing"
            android:layout_marginLeft="@dimen/search_bar_spacing"
            android:layout_marginRight="@dimen/search_bar_spacing"
            android:layout_marginEnd="@dimen/search_bar_spacing"
            android:textColorHint="@color/dark_blue"
            android:textColor="@color/dark_blue"
            app:drawableLeftCompat="@drawable/ic_baseline_lock_24"
            android:drawablePadding="14dp"
            android:background="@drawable/bottom_view_border"
            android:inputType="textPassword"
            android:hint="@string/confirm_password"
            android:textStyle="bold"
            android:importantForAutofill="no"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/product_name_margin_top"
            android:layout_marginEnd="@dimen/search_bar_spacing"
            android:layout_marginRight="@dimen/search_bar_spacing"
            android:layout_marginStart="@dimen/search_bar_spacing"
            android:layout_marginLeft="@dimen/search_bar_spacing"
            android:background="@drawable/login_btn_border"
            android:text="@string/sign_up"/>

        <LinearLayout
            android:id="@+id/have_account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/product_name_margin_top"
            android:layout_marginStart="@dimen/product_name_margin_top">

            <TextView
                android:id="@+id/no_account_text"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:text="@string/have_account"
                android:textStyle="italic"
                android:textColor="@color/orange"
                android:layout_marginEnd="@dimen/product_name_margin_top"
                android:layout_marginStart="@dimen/product_name_margin_top"/>

            <TextView
                android:id="@+id/create_account_btn"
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:textStyle="italic"
                android:gravity="center_horizontal"
                android:textColor="@color/dark_blue"
                android:layout_marginEnd="@dimen/product_name_margin_top"
                android:layout_marginStart="@dimen/product_name_margin_top"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dark_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_gray"
        android:orientation="horizontal"
        android:alpha=".7"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/progress_dialog"
        android:layout_height="@dimen/progress_dialog"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>